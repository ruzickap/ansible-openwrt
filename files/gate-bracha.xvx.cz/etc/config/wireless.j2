config wifi-device 'radio0'
	option type 'mac80211'
	option channel '{{ wifi_2ghz_channel }}'
	option hwmode '11g'
	option path 'platform/soc/a000000.wifi'
	option country 'CZ'
	option htmode 'HT40'
	option noscan '1'
	option txpower '20'

config wifi-iface 'default_radio0'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option ssid '{{ wifi_ssid }} 2.4 GHz'
	option encryption 'psk2+tkip+aes'
	option key '{{ wifi_password }}'
	option wpa_disable_eapol_key_retries '1'

config wifi-device 'radio1'
	option type 'mac80211'
	option channel '{{ wifi_5ghz_channel }}'
	option hwmode '11a'
	option path 'platform/soc/a800000.wifi'
	option htmode 'VHT80'
	option country 'CZ'

config wifi-iface 'default_radio1'
	option device 'radio1'
	option network 'lan'
	option mode 'ap'
	option ssid '{{ wifi_ssid }} 5 GHz'
	option encryption 'psk2+tkip+aes'
	option key '{{ wifi_password }}'
	option wpa_disable_eapol_key_retries '1'
